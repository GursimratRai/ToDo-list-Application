<html>
    <head>
        <title>
           To Do List
        </title>
        
        <!-- link to bootstrap CDN -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        
        <!-- link for using font awesome icons -->
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
        
        <!-- linking home stylesheet -->
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>

        <!-- Main heading of the Page -->
        <div id='Main-header' >
          <div>
            <h1 id='header'>Things TO Do</h1>
          </div>

          <div>
            <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#input-form">
              <i class="fas fa-trash-alt"></i>
            </button>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#input-form">
                <i class="fas fa-feather-alt"></i>
            </button>
          </div>

        </div>

        <!-- Input form for adding new task -->
        <div>
            <div class="modal fade" id="input-form" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalCenterTitle">NEW TASK</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>

                    <div class="modal-body">
                        <form action='/create-note' method='POST'>
                    
                           <div class="form-group">
                               <label for='description'>Description:</label><br>
                               <input type='text' class="form-control" id='description' placeholder="Enter what you want to do"  name='description' required >
                            </div>
        
                            <div class="form-group">
                               <label for='date'>Date:</label><br>
                               <input type='date' class="form-control" id='date'  name='date' required >
                            </div>

                            <div class="form-group d-flex" >
                              <div class="w-50 m-1">
                                <label for="tag">Select Category:</label>
                                <select class="form-control" id="tag" name='category' required>
                                  <option value='home'>Home</option>
                                  <option value='school'>School</option>
                                  <option value='office'>Office</option>
                                  <option value='medical'>Medical</option>
                                  <option value='other'>Other</option>
                                </select>
                              </div>

                              <div class="w-50 m-1">
                                <label for="priority">Select Priority:</label>
                                <select class="form-control" id="priority" name='priority' required>
                                  <option value='primary' >Most Important</option>
                                  <option value='secondary' >Important</option>
                                  <option value='success' >Today</option>
                                  <option value='danger' >Tomorrow</option>
                                  <option value='info' >Do It Later</option>
                                </select>
                              </div>

                            </div>
                
                            <div class="form-group">
                               <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                               <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>      
                        </form>
                    </div>
                  </div>
                </div>
              </div>
        </div>

        <!-- Container for all the tasks-->
        <div id="note-container" class="d-flex flex-wrap ">
            <% for(let i of notes){ %>
            <div class="w-100 m-2">
              <div class="container-fluid border border-<%= i.priority %> text-<%= i.priority %>">
                <div class="row">
                  <div class="col-1 d-flex align-items-center justify-content-center">
                    <input type="checkbox" name="id" value="<%= i._id %>">
                  </div>
                  <div class="col-9 ">
                    <div class="row">
                      <p> <%= i.description %> </p>
                    </div>

                    <div class="row text-black-50" style=" opacity: 0.6;">
                      <h6 class> <i class="fas fa-calendar-alt"></i> <%= i.date %> </h6>
                    </div>

                  </div>
                  <div class="col-2 bg-<%= i.priority %> text-capitalize text-white text-center d-flex align-items-center justify-content-center p-2 ">
                    <div> <%= i.category %> </div> 
                  </div>
                </div>
              </div>
            </div>
            <% } %>
       </div>

        <!-- Including JQuery -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="/js/home.js"></script>
    
    </body>
</html>